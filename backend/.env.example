# 服务器配置
PORT=5000
HOST=0.0.0.0
NODE_ENV=development
ENABLE_HTTPS=false

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/jobtrip
MONGODB_URI_TEST=mongodb://localhost:27017/jobtrip_test

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API速率限制
RATE_LIMIT_WINDOW_MS=900000 # 15分钟
RATE_LIMIT_MAX=100 # 每个IP 15分钟内最多100个请求 